@model ProcessoSeletivo.Models.Lesson

@{
    ViewData["Title"] = "Delete";
}

<h1>Tem certeza que deseja excluir a AULA abaixo?</h1>
<div>
    <hr />
    <div>
        <div class="card border-primary mb-3" style="max-width: 100%;">
            <div class="card-header">@Html.DisplayFor(model => model.Title)</div>
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayNameFor(model => model.Description)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Description)</p>
            </div>
            <div class="card-body">
                <p class="card-text"><b>@Html.DisplayNameFor(model => model.Module):</b> @Html.DisplayFor(model => model.Module.Title)</p>
                <p class="card-text"><b>@Html.DisplayNameFor(model => model.Url):</b> @Html.DisplayFor(model => model.Url)</p>
            </div>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <input type="button" class="btn btn-secondary mx-2" value="Voltar" onclick="location.href='@Url.Action("Index", "Lesson" )'" />
    </form>
</div>
